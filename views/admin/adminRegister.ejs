<div id="particles-js">
    <div id="overlay">
        <h2 id="topic">REGISTER</h2>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="nav nav-tabs">
                      <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#newStudent">New Student</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#curStudent">Existing Student</a>
                      </li>
                    </ul>
                </div>    
            </div>
            <div id="content-background">
                <div class="tab-content">
                    <div class="row tab-pane active" id="newStudent">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-fill">
                                <div class="panel-heading">
                                    <h3 class="panel-title">New Student's Information</h3>
                                </div>
                                <form action="/admin/register/new" id="registernew" method="POST">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <label class="col-sm-1 control-label label">F. Name</label>
                                                <div class="col-sm-4">
                                                    <input type="text" name="firstname" placeholder="First Name" class="form-control">
                                                </div>
                                                <div class="col-sm-2"></div>
                                                <label class="col-sm-1 control-label label">L. Name</label>
                                                <div class="col-sm-4">
                                                    <input type="text" name="lastname" placeholder="Last Name" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <label class="col-sm-1 control-label label">Email</label>
                                                <div class="col-sm-4 input-group-append">
                                                    <input class="form-control" type="email" name="email" placeholder="Email">
                                                </div>
                                                <div class="col-sm-2"></div>
                                                <label class="col-sm-1 control-label label">A/L Year</label>
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        <select class="form-control combobox" name="ALYear" id="alyear1">
                                                            <%for(var i=years; i<(years+4) ;i++){ %>   
                                                                <option><%=i%></option>
                                                            <% } %>
                                                        </select>
                                                      </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                    <div class="table">
                                                    </div>
                    
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    
                    <div class="row tab-pane fade"  id="curStudent">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-fill">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Existing Student's Information</h3>
                                </div>
                                <form action="/admin/register" method="POST">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <label class="col-sm-1 control-label label">Student #</label>
                                                <div class="col-sm-4">
                                                    <div class="input-group mb-3">
                                                      <input type="text" class="form-control" placeholder="Student ID" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                                      <div class="input-group-append">
                                                        <button class="btn btn-primary" type="button" style="margin-bottom:0;font-size:12px;">CHECK</button>
                                                      </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <label class="col-sm-1 control-label label">Name</label>
                                                <div class="col-sm-4 input-group-append">
                                                    <input class="form-control" type="text" name="name" placeholder="Name">
                                                </div>
                                                <div class="col-sm-2"></div>
                                                <label class="col-sm-1 control-label label">A/L Year</label>
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        <select class="form-control combobox" id="alyear2">
                                                            <%for(var i=years; i<(years+4) ;i++){ %>   
                                                                <option><%=i%></option>
                                                            <% } %>
                                                        </select>
                                                      </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                     <div class="table">
                                                    </div>
                    
                                </form>
                            </div>
                        </div>
                    </div>
                            
                   
                    <center>
                        <div class="form-group">
                            <button type="submit" id="submitbtn" class="btn btn-primary">ADD STUDENT</button>
                        </div>
                    </center>
                </div> 
            </div>
        </div>
    </div>
</div>

<script src="../scripts/register.js"></script>
