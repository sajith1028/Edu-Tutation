<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Stocks</title>
        <!-- Responsive screen size -->
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
        <!-- End of responsive screen size -->
        
        <!-- Bootstrap -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <!-- End of Bootstrap -->    
    
        <!-- Google fonts -->
            <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700,900" rel="stylesheet">

        <!-- Custom Stylesheet -->
            <link rel="stylesheet" type="text/css" href="/stylesheets/form.css"> 
        <!-- End of Custom Stylesheet -->    
        
        <!-- Sweet Alerts -->
            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <!-- End of Sweet Alerts -->
          
        <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">

        <!-- jQuery -->
            <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
        <!-- End of jQuery -->  
        
        <!-- particles -->
            <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
            <script>
                particlesJS.load('particles-js', '/json/particles.json');
            </script>
        <!-- End of particles --> 
        <script src= "https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    </head>
<body>

    <% include ./navbarPartial %>

    <div id="particles-js">
        <div id="overlay">
            <h2 id="topic">Stocks</h2>
            <div class="wrapper">
                <div class="container">
                    <center><h4 style="margin-bottom:15px; margin-top:20px">Available inventory items</h4></center>
                    <div class="container-table100">
                        <div class="wrap-table100">
                            <div class="table100">
                                <table id="stockTable" style="border:1px solid gray; margin-top:150px">
                                    <thead>
                                        <tr class="table100-head">
                                            <th class="column3">Item ID</th>
                                            <th class="column3">Description</th>
                                            <th class="column3">Unit</th>
                                            <th class="column3">Received Qty</th>
                                            <th class="column3">Issued Qty</th>
                                            <th class="column3">In Stock Qty</th>
                                            <th class="column3">Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% items.forEach(it => { %>
                                            <tr>
                                                <td class="column1"><%=it.itID %></td>
                                                <td class="column2"><%=it.description %></td>
                                                <td class="column3"><%=it.unit %></td>
                                                <td class="column4"><%=it.receivedQty %></td>
                                                <td class="column5"><%=it.issuedQty %></td>
                                                <td class="column5"><%=it.inStockQty %></td>
                                                <td class="column6"><%=it.remarks %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#stockTable").dataTable();
    </script>
<% include ../partials/footer %>