<div id="particles-js">
        <div id="overlay">
    <div class="wrapper">
        <div class="container">
    
            <div class="wraper">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="bg-picture text-center">
                            <div class="bg-picture-overlay"></div>
                            <div class="profile-info-name">
                                <img src="../images/users/<%=currentUser.username%>.jpg" class="thumb-lg img-circle img-thumbnail" alt="profile-image" id="img">
                                <h3 class="text-white"><%=details[0].name%></h3>
                            </div>
                        </div>
                        <!--/ meta -->
                    </div>
                </div>
                <div class="row user-tabs">  
                    <ul class="nav nav-tabs tabs" style="width: 100%;">
                        <li class="tab" style="width: 25%;">
                            <a href="#settings-2" data-toggle="tab" aria-expanded="false" class="active">
                                <span class="hidden-xs">Settings</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                            <div class="tab-pane" id="settings-2">
                                <form  action="/student/profile" name="personalinfo" method="POST" >
                                <div class="panel panel-default panel-fill">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Personal info</h3>
                                    </div>
                                    <div class="panel-body">
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Name</label>
                                        <div class="col-sm-10">
                                          <input type="text" id="name2" name="name" value="<%= details[0].name %>" class="form-control" required>
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">School</label>
                                        <div class="col-sm-10">
                                          <input type="text" id='school2' name="school" value="<%= details[0].school %>" class="form-control">
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Gender</label>
                                        <div class="col-sm-10">
                                          <label class="radio-inline"  style="margin-right: 20px"><input type="radio" name="optradio" checked;>Male</label>
                                          <label class="radio-inline"><input type="radio" name="optradio">Female</label>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                            
                                  <div class="panel panel-default panel-fill">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Contact info</h3>
                                    </div>
                                    <div class="panel-body">
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Residence</label>
                                        <div class="col-sm-10">
                                            <% if(details[0].teleres!=0) %>
                                          <input type="tel" id='teleres' name="teleres" value="<%= details[0].teleres %>" class="form-control">
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Mobile</label>
                                        <div class="col-sm-10">
                                            <% if( details[0].mob!=0) %>
                                          <input type="tel" id='telemob' name="telemob" value="<%= details[0].telemob %>" class="form-control">
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Email</label>
                                        <div class="col-sm-10">
                                          <input type="email" id='email2' name="email" value="<%= details[0].email%>" class="form-control" required>
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Address</label>
                                        <div class="col-sm-10">
                                          <textarea rows="3" id='address2' name="address" value="<%= details[0].address %>" class="form-control"></textarea>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                            
                                  <div class="panel panel-default panel-fill">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Security</h3>
                                    </div>
                                    <div class="panel-body">
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">Current password</label>
                                        <div class="col-sm-10">
                                          <input type="password" name="curpwd" class="form-control">
                                        </div>
                                      </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label">New password</label>
                                        <div class="col-sm-10">
                                          <input type="password" name="newpwd" class="form-control">
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                   </form>
                                  <center><div>
                                          <button id='submitBtn' type="submit" class="btn btn-primary" style="width:100px;">Submit</button>
                                          <button type="reset" class="btn btn-primary cancel" style="width:100px;">Cancel</button>
                                        </div></center>
                                <!-- Personal-Information -->
                               
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Footer -->
            </div>
            <!-- end container -->
        </div>
        <!-- end wrapper -->
    </div>
    </div>
</div>

