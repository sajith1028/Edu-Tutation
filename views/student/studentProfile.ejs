      <ul class="nav navbar-nav navbar-right">
           <% if(!currentUser){ %>
    <a  id="register"href="/login">
      <button class="custombtn btn btn-outline-primary btn-sm" type="submit">Log In</span></button>
    </a>
   <% } else { %>
   
        <a id="user" class="links" href="/student/profile"> Signed in as
        <%= currentUser.username %> 
        <img src="../images/users/<%=currentUser.username%>.jpg" class="img-rounded border" alt="profile-image" style="max-height: 50px; max-width: 50px; border-radius: 50px; border-width: 5px" id="img">
