<div id="particles-js">
    <div id="overlay">
        <h2 id="topic">COURSE CONTENT</h2>
        
        <div class="container">
            <div id="content-background">
                <div class="tab-content">
                    <div class="row tab-pane active" id="newStudent">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-fill">
                                <% if (content.length!=0) { %>
                                    <center><h4>Previously Uploaded Course Content - Subject <%= content.id.id %></h4></center><br>
                                    <% var section = '' %>
                                   <div class="panel-heading">
                                        <h3 class="panel-title"><%= content[0].section %></h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                    <% var section = content[0].section%>
                                   
                                    <% for(var i =0; i< content.length; i++) { %>
                                    <% if (section != content[i].section && i>0) {%>
                                            </div> <!-- row.// -->
                                                </div>
                                                    <br>
                                                    <div class="panel-heading">
                                                        <h3 class="panel-title"><%= content[i].section %></h3>
                                                    </div>
                                                    <div class="panel-body">
                                                        <div class="row">
                                        <% } else if (section != content[i].section) {%>
                                            <div class="panel-heading">
                                                <h3 class="panel-title"><%= content[i].section %></h3>
                                            </div>
                                            <div class="panel-body">
                                        <% }%>
                                        
                                        <% if (i>=3 && i%4==0) {%>
                                            <div class="row">
                                        <% } %>
                                                
                                                <div class="col-md-3">
                                                	<figure class="card card-product" style="border:1px gray solid; background-color:#f5f8f9">
                                                		<div class="img-wrap"> 
                                                			<img src="../../images/misc/pdf.png" style="padding-top:20px; padding-bottom:20px;">
                                                		</div>
                                                		<figcaption class="info-wrap" style="border-top:1px gray solid">
                                                			<h6 class="title text-dots"><a href="#"><%= content[i].title %></a></h6>
                                                			<div class="action-wrap">
                                                				<div class="price-wrap h6">
                                                					<span class="price-new"><%= content[i].description %></span>
                                                				</div> <!-- price-wrap.// -->
                                                				<br>
                                                				<a href="../../CourseContent/<%= content[i].contentID %>" class="btn btn-primary btn-sm float-right"> Download </a>
                                                			</div> <!-- action-wrap -->
                                                		</figcaption>
                                                	</figure> <!-- card // -->
                                                </div> <!-- col // -->
                                        <% section = content[i].section %>
                                    <% } %>    
                                     </div> <!-- row.// -->
                                </div>
                                <% }else{ %>
                                    <center><h4>Previously Uploaded Course Content Not Found - Subject <%= content.id.id %></h4></center><br>
                                    <br>
                                <% } %>
                                <br>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
        
    </div>
