      <ul class="navbar-nav nav-link">
        <a class="links" href="/lecturer">Home</a>
      </ul>
      <ul class="navbar-nav nav-link">
        <a class="links" href="/lecturer/income">Income</a>
      </ul>
      <ul class="navbar-nav nav-link">
        <a class="links" href="/lecturer/newsfeeds">Newsfeed</a>
      </ul>       

      <ul class="nav navbar-nav navbar-right">
        <a  id="register"href="/logout">
          <button class="btn btn-outline-primary btn-sm custombtn"  style="margin-bottom:30px;margin-left:40px" type="submit">Logout</button>
